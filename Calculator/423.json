        "primary_complains": [
            "Joint Pain"
        ],
        "disease_treated": [
            "Rheumatoid Arthritis"
        ],
        "logic": "var calc_output = [];\nvar tender = parseFloat(tender);\nvar swollen = parseFloat(swollen);\nvar pt = parseFloat(pt);\nvar md = parseFloat(md);\nvar crp \n\nif (UOMSYSTEM == true) { \n  crp = parseFloat(crp)/10;\n}\nelse {\n  crp = parseFloat(crp);\n}\n\nvar msg, mini_msg;\nvar value = pt + md + crp + tender + swollen\n\nif (value <= 3.3) {\n  mini_msg='Remission';\n    msg = \"Remission of RA per SDAI\";\n} else if (value > 3.3 && value <= 11) {\n  mini_msg='Low Severity';\n    msg = \"Low Severity of of RA per SDAI\";\n} else if (value > 11 && value <= 26) {\n  mini_msg='Moderate Severity';\n    msg = \"Moderate Severity of RA per SDAI\";\n} else if (value > 26) {\n  mini_msg='High Severity';\n    msg = \"High Severity of RA per SDAI\";\n}\n\n\ncalc_output.push({ \n  name: 'mini', \n  value: value.toFixed(1), \n  value_text: 'points', \n  message: mini_msg \n});\ncalc_output.push({ \n  name: '2194_SDAI for RA_result', \n  value: value.toFixed(1), \n  value_text: 'points', \n  message: msg + '<br/><br/><guideline id = \"10123\">ACR guideline</guideline>'\n});\n",
