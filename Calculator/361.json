        "logic": "var calc_output = [];\nvar u = 0;\nvar v;\nvar sbp = parseFloat(systolic_bp);\nvar creatinine = parseFloat(creatinine);\nif (UOMSYSTEM == false) {\n    creatinine = creatinine / 88.4;\n}\nif (parseFloat(systolic_bp) > 160) {\n    sbp = 160;\n}\nhr = parseFloat(heart_rate);\nif (parseFloat(heart_rate) < 80) {\n    hr = 80;\n}\nif (parseFloat(heart_rate) > 120) {\n    hr = 120;\n}\nsat = parseFloat(o2_sat);\nif (parseFloat(o2_sat) > 92) {\n    sat = 92;\n}\nu = parseFloat(age) * 2 + parseFloat(ems) + sbp * -1 + hr + sat * -2 + creatinine * 20 + parseFloat(potassium) + parseFloat(troponin) + parseFloat(cancer) + parseFloat(metolazone) + 12;\nu = u.toFixed(1)\nif (u <= -15.9) {\n    msg = 'Lowest Risk of 7-day mortality.';\n    v = '0.3'\n}\nif (u > -15.9 && u <= 17.9) {\n    msg = 'Low Risk of 7-day mortality.';\n    v = '0.7'\n}\nif (u > 17.9 && u <= 56.5) {\n    msg = 'Intermediate Risk of 7-day mortality.';\n    v = '2'\n}\nif (u > 56.5 && u <= 89.3) {\n    msg = 'High Risk of 7-day mortality.';\n    v = '3.5'\n}\nif (u > 89.3) {\n    msg = 'Highest Risk of 7-day mortality. Consider admission.';\n    v = '8.2'\n}\ncalc_output.push({ \n    name: 'mini', \n    value: u, \n    value_text: 'points', \n    message: msg \n});\ncalc_output.push({ \n    name: '1755_EHMRG Score_result (score)', \n    value: u, \n    value_text: 'points', \n    message: 'EHMRG Score' \n});\ncalc_output.push({ \n    name: '1755_EHMRG Score_result (mortality)', \n    value: v, \n    value_text: '%', \n    message: msg \n});",
