{
    "id": "391",
    "title": "COWS Score for Opiate Withdrawal",
    "desc": "The COWS Score for Opiate Withdrawal quantifies severity of opiate withdrawal.",
    "data": {
        "orgreference": [
            {
                "href": "https://www.ncbi.nlm.nih.gov/pubmed/12924748",
                "text": "Wesson DR, Ling W. The Clinical Opiate Withdrawal Scale (COWS) J Psychoactive Drugs.2003;35:253–259."
            }
        ],
        "other_refer": [
            {
                "href": "https://www.naabt.org/documents/cows_induction_flow_sheet.pdf",
                "text": "The National Alliance of Advocates for Buprenorphine Treatment COWS Flow sheet. Published Nov. 2011."
            }
        ],
        "evidence": "<p>Addition of the selected points; as above.</p>",
        "facts": "<p><strong>Score interpretation:</strong></p>\n<ul>\n<li>&lt;5 - no active withdrawal</li>\n<li>5-12 - mild withdrawal</li>\n<li>13-24 - moderate withdrawal</li>\n<li>25-36 - moderately severe withdrawal</li>\n<li>&gt;36 - severe withdrawal</li>\n</ul>",
        "estimation": [],
        "primary_complains": [
            "Anxious",
            "Diarrhea",
            "Headache",
            "Vomiting"
        ],
        "disease_treated": [
            "Drug/Alcohol Use",
            "Ingestion/Overdose",
            "Substance Withdrawal"
        ],
        "logic": "var calc_output=[]; \nvar msg; \nvar u=parseFloat(pulse)+parseFloat(sweat)+parseFloat(restless)+parseFloat(pupil)+parseFloat(bone)+parseFloat(noise)+parseFloat(gi)+parseFloat(tremor)+parseFloat(yawn)+parseFloat(anxiety)+parseFloat(skin);\n\nif(u<5){msg='No active withdrawal'}\nelse if(u>=5&&u<=12){msg='Mild withdrawal'}\nelse if(u>=13&&u<=24){msg='Moderate withdrawal'}\nelse if(u>=25&&u<=36){msg='Moderately severe withdrawal'}\nelse if(u>36){msg='Severe withdrawal'} \n\ncalc_output.push({\n    name:'mini',\n    value:u.toFixed(0),\n    value_text:'points',\n    message:'COWS Score'\n}); \ncalc_output.push({\n    name:'1985_COWS Score_result',\n    value:u.toFixed(0),\n    value_text:'points',\n    message:msg\n});",
