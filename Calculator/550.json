        "evidence": "<p>Addition of the selected points:</p>\n<table>\n<tbody>\n<tr>\n<td>&nbsp;</td>\n<td>\n<p><strong>0 points</strong></p>\n</td>\n<td>\n<p><strong>1 point</strong></p>\n</td>\n<td>\n<p><strong>2 points</strong></p>\n</td>\n</tr>\n<tr>\n<td>\n<p><strong>S</strong><strong>ystolic BP &lt;90</strong></p>\n</td>\n<td>\n<p>No</p>\n</td>\n<td>\n<p>--</p>\n</td>\n<td>\n<p>Yes</p>\n</td>\n</tr>\n<tr>\n<td>\n<p><strong>M</strong><strong>ultilobar CXR involvement</strong></p>\n</td>\n<td>\n<p>No</p>\n</td>\n<td>\n<p>Yes</p>\n</td>\n<td>\n<p>--</p>\n</td>\n</tr>\n<tr>\n<td>\n<p><strong>A</strong><strong>lbumin &lt;3.5 g/dL</strong></p>\n</td>\n<td>\n<p>No</p>\n</td>\n<td>\n<p>Yes</p>\n</td>\n<td>\n<p>--</p>\n</td>\n</tr>\n<tr>\n<td>\n<p><strong>R</strong><strong>espiratory rate</strong></p>\n</td>\n<td>\n<p>&lt;25, if age &le;50</p>\n<p>&lt;30, if age &gt;50</p>\n</td>\n<td>\n<p>&ge;25, if age &le;50</p>\n<p>&ge;30, if age &gt;50</p>\n</td>\n<td>\n<p>--</p>\n</td>\n</tr>\n<tr>\n<td>\n<p><strong>Tachycardia &ge;125</strong></p>\n</td>\n<td>\n<p>No</p>\n</td>\n<td>\n<p>Yes</p>\n</td>\n<td>\n<p>--</p>\n</td>\n</tr>\n<tr>\n<td>\n<p><strong>C</strong><strong>onfusion (new onset)</strong></p>\n</td>\n<td>\n<p>No</p>\n</td>\n<td>\n<p>Yes</p>\n</td>\n<td>\n<p>--</p>\n</td>\n</tr>\n<tr>\n<td>\n<p><strong>O</strong><strong>xygen low</strong></p>\n</td>\n<td>\n<p>PaO2 &ge;60 (or SaO2 &gt;90% or P/F ratio &ge;250), if age &gt;50</p>\n<p>PaO2 &ge;70 (or SaO2 &gt;93% or P/F ratio &ge;333), if age &le;50</p>\n</td>\n<td>\n<p>--</p>\n</td>\n<td>\n<p>PaO2 &lt;60 (or SaO2 &le;90% or P/F ratio &lt;250), if age &gt;50</p>\n<p>PaO2 &lt;70 (or SaO2 &le;93% or P/F ratio &lt;333), if age &le;50</p>\n</td>\n</tr>\n<tr>\n<td>\n<p><strong>Arterial </strong><strong>p</strong><strong>H &lt;7.35</strong></p>\n</td>\n<td>\n<p>No</p>\n</td>\n<td>\n<p>--</p>\n</td>\n<td>\n<p>Yes</p>\n</td>\n</tr>\n</tbody>\n</table>",
        "facts": "<p>Interpretation:</p>\n<table>\n<tbody>\n<tr>\n<td>\n<p><strong>SMART-COP Score</strong></p>\n</td>\n<td>\n<p><strong>Risk Group</strong></p>\n</td>\n<td>\n<p><strong>Risk* </strong></p>\n</td>\n</tr>\n<tr>\n<td>\n<p><strong>0&ndash;2</strong></p>\n</td>\n<td>\n<p>Low</p>\n</td>\n<td>\n<p>Minimal</p>\n</td>\n</tr>\n<tr>\n<td>\n<p><strong>3&ndash;4</strong></p>\n</td>\n<td>\n<p>Moderate</p>\n</td>\n<td>\n<p>1 in 8</p>\n</td>\n</tr>\n<tr>\n<td>\n<p><strong>5&ndash;6</strong></p>\n</td>\n<td>\n<p>High</p>\n<p>Consider ICU admission</p>\n</td>\n<td>\n<p>1 in 3</p>\n</td>\n</tr>\n<tr>\n<td>\n<p><strong>&ge;7</strong></p>\n</td>\n<td>\n<p>Very high</p>\n<p>Consider ICU admission</p>\n</td>\n<td>\n<p>2 in 3</p>\n</td>\n</tr>\n</tbody>\n</table>\n<p>*Of requiring intensive respiratory or vasopressor support (IRVS).</p>",
