        ],
        "disease_treated": [
            "Gout"
        ],
        "logic": "var calc_output = [];\n\nvar male, attack, onset, red, mtp, cvd, uric;\nmale = parseFloat(male);\nattack = parseFloat(attack);\nonset = parseFloat(onset);\nred = parseFloat(red);\nmtp = parseFloat(mtp);\ncvd = parseFloat(cvd);\nuric = parseFloat(uric);\n\nvar u = male + attack + onset + red + mtp + cvd + uric;\nvar msg = '';\nvar mini_msg = '';\nif (u <= 4) { mini_msg = '2.2% prevalence of gout in original study.'; msg='Gout unlikely and other diagnoses should be considered.'; }\nif (u > 4 && u < 8) { mini_msg = '31.2% prevalence of gout'; msg='Scores from >4 and <8 are equivocal. These patients often benefit the most from synovial fluid analysis for crystals.'; }\nif (u >= 8) { mini_msg = '82.5% prevalence of gout in original study.'; msg='Gout is very likely.'; }\n\ncalc_output.push({ \n    name: 'mini', \n    value: u, \n    value_text: 'points', \n    message: mini_msg \n});\ncalc_output.push({ \n    name: '2175_Acute Gout Diagnosis Rule_result',\n    value: u, \n    value_text: 'points', \n    message: mini_msg+'<br/><br/>'+msg \n});",
