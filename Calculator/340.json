        "logic": "var calc_output=[]; \n\nvar u=parseInt(age)+parseInt(sex)+parseInt(cancer)+parseInt(heart_failure)+parseInt(chronic_lung_disease)+parseInt(heart_rate_110)+parseInt(systolic_blood_pressure_100)+parseInt(respiratory_rate_30)+parseInt(temperature_36)+parseInt(altered_mental_status)+parseInt(o2_saturation_90);\n\nvar msg='';\nvar mini_msg=''; \n\nif(u<66){\n    msg='Class I, Very Low Risk: 0-1.6% 30-day mortality in this group.';\n    mini_msg='Very Low Risk.'\n} \nif(u>65&&u<86){\n    msg='Class II, Low Risk: 1.7-3.5% 30-day mortality in this group.';\n    mini_msg='Low Risk.'\n} \nif(u>85&&u<106){\n    msg='Class III, Intermediate Risk: 3.2-7.1% 30-day mortality in this group.';\n    mini_msg='Intermediate Risk.'\n} \nif(u>105&&u<126){\n    msg='Class IV, High Risk: 4.0-11.4% 30-day mortality in this group.';\n    mini_msg='High Risk.'\n} \nif(u>125){\n    msg='Class V, Very High Risk: 10.0-24.5% 30-day mortality in this group.';\n    mini_msg='Very High Risk.'\n} \n\ncalc_output.push({\n    name:'mini',\n    value:u,\n    value_text:'points',\n    message:mini_msg\n}); \ncalc_output.push({\n    name:'1304_PESI Score_result',\n    value:u,\n    value_text:'points',\nmessage:msg\n});",
