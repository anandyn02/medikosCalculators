        "orgreference": [
            {
                "href": "https://pubmed.ncbi.nlm.nih.gov/34120177/",
                "text": "SCORE2 working group and ESC Cardiovascular risk collaboration. SCORE2 risk prediction algorithms: new models to estimate 10-year risk of cardiovascular disease in Europe. Eur Heart J. 2021;42(25):2439-2454."
            }
