        "logic": "var calc_output = [];\nvar msg= '';\nvar mini_msg='';\n\nif (ana == 0) {\n  var ana = parseFloat(addtl)\n}\nelse {\n  var ana = parseFloat(ana)\n}\n\nif (parseFloat(liver_int) + parseFloat(liver_lymph) + parseFloat(liver_ros) == 0) {\n  var liver = -5\n}\nelse {\n  var liver = parseFloat(liver_int) + parseFloat(liver_lymph) + parseFloat(liver_ros) + parseFloat(liver_bil) + parseFloat(liver_other)\n}\n\nvar u = parseFloat(sex) + parseFloat(ratio) + parseFloat(serum) + parseFloat(ana) + parseFloat(ama) + parseFloat(hepa) + parseFloat(drug) + parseFloat(alcohol) + parseFloat(liver) + parseFloat(other) + parseFloat(resp);\n\n        if (u < 10) {\n            mini_msg='Possible AIH'; msg='<br/><br/>Other testing recommended.';\n        } else if (u >= 10 && u <= 12) {\n            mini_msg='Pre-treatment: probable AIH.'; msg='<br/><br/>Post-treatment: possible AIH, other testing recommended.';\n        } else if (u > 12 && u <= 15) {\n            mini_msg='Pre-treatment: probable AIH.'; msg='<br/><br/>Post-treatment: probable AIH';\n        } else if (u > 15 && u <= 17) {\n            mini_msg='Pre-treatment: definite AIH.'; msg='<br/><br/>Post-treatment: probable AIH.';\n        } else if (u > 17) {\n            mini_msg='Pre-treatment: definite AIH.'; msg='<br/><br/>Post-treatment: definite AIH.';\n        }\n\ncalc_output.push({ \n  name: 'mini', \n  value: u, \n  value_text: 'points', \n  message: mini_msg \n});\ncalc_output.push({ \n  name: '3111_Revised Original AIH Score_result', value: u, value_text: 'points', message: mini_msg+msg });",
