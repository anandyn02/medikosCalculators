        "logic": "var calc_output = [];\n\nif(parseFloat(entry) === 0){\n    calc_output.push({\n        name: 'mini',\n        value: 'Ineligible',\n        value_text: '',\n        message: 'This patient is not eligible for scoring. Use only in patients with suspected FH, either by elevated cholesterol level or family history.'\n    });\n    calc_output.push({\n        name: '3818_Dutch Criteria_result',\n        value: 'Ineligible',\n        value_text: '',\n        message: 'This patient is not eligible for scoring. Use only in patients with suspected FH, either by elevated cholesterol level or family history.'\n    });\n\n}else{\n    var u = Math.max(parseFloat(relative_corvasc), parseFloat(relative_ldl95)) + Math.max(parseFloat(relative_xan), parseFloat(child_ldl95)) + parseFloat(premcad) + parseFloat(premvasc) + parseFloat(xan) + parseFloat(arcus) + parseFloat(ldl) + parseFloat(dna);\n\n    var string1;\n\n    var pt = ' points';\n    if (u > 8) {\n        string1 = \"Definite FH\";\n    }\n    if (u >= 6 && u <= 8) {\n        string1 = \"Probable FH\";\n    }\n    if (u >= 3 && u <= 5) {\n        string1 = \"Possible FH\";\n    }\n    if (u < 3) {\n        string1 = \"Unlikely FH\";\n    }\n\n    if(u === 1){\n        pt = ' point';\n    }\n    \n    calc_output.push({\n        name: 'mini',\n        value: string1,\n        value_text: '',\n        message: u + pt\n    });\n    calc_output.push({\n        name: '3818_Dutch Criteria_result',\n        value: string1,\n        value_text: '',\n        message: u + pt\n    });\n}",
