        "evidence": "<p dir=\"ltr\">Addition of the selected points:</p>\n<p><span id=\"docs-internal-guid-2bb86560-cd99-d4df-2e1a-a8b5076c66f4\"></span></p>\n<div dir=\"ltr\">\n<table><colgroup><col width=\"*\" /><col width=\"*\" /><col width=\"*\" /><col width=\"*\" /></colgroup>\n<tbody>\n<tr>\n<td>\n<p dir=\"ltr\"><strong>Variable </strong></p>\n</td>\n<td>\n<p dir=\"ltr\"><strong>0 points</strong></p>\n</td>\n<td>\n<p dir=\"ltr\"><strong>1 point</strong></p>\n</td>\n<td>\n<p dir=\"ltr\"><strong>2 points</strong></p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Age, years</p>\n</td>\n<td>\n<p dir=\"ltr\">&le;65</p>\n</td>\n<td>\n<p dir=\"ltr\">&gt;65</p>\n</td>\n<td>\n<p dir=\"ltr\">--</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">White blood cell count, x10<sup>9</sup>/dL</p>\n</td>\n<td>\n<p dir=\"ltr\">&le;25</p>\n</td>\n<td>\n<p dir=\"ltr\">&gt;25</p>\n</td>\n<td>\n<p dir=\"ltr\">--</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Hemoglobin, g/dL</p>\n</td>\n<td>\n<p dir=\"ltr\">&ge;10</p>\n</td>\n<td>\n<p dir=\"ltr\">--</p>\n</td>\n<td>\n<p dir=\"ltr\">&lt;10</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Peripheral blood blasts</p>\n</td>\n<td>\n<p dir=\"ltr\">&lt;1%</p>\n</td>\n<td>\n<p dir=\"ltr\">&ge;1%</p>\n</td>\n<td>\n<p dir=\"ltr\">--</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Constitutional symptoms</p>\n</td>\n<td>\n<p dir=\"ltr\">No</p>\n</td>\n<td>\n<p dir=\"ltr\">Yes</p>\n</td>\n<td>\n<p dir=\"ltr\">--</p>\n</td>\n</tr>\n</tbody>\n</table>\n</div>",
        "facts": "<p dir=\"ltr\">Interpretation:</p>\n<p><span id=\"docs-internal-guid-7f973dc9-7fff-f2b7-2da1-eae55a7560a6\"></span></p>\n<div dir=\"ltr\">\n<table><colgroup><col width=\"106\" /><col width=\"114\" /><col width=\"114\" /></colgroup>\n<tbody>\n<tr>\n<td>\n<p dir=\"ltr\"><strong>DIPSS Score</strong></p>\n</td>\n<td>\n<p dir=\"ltr\"><strong>Risk category </strong></p>\n</td>\n<td>\n<p dir=\"ltr\"><strong>Median&nbsp;survival</strong></p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n<td>\n<p dir=\"ltr\">Low</p>\n</td>\n<td>\n<p dir=\"ltr\">Not reached</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">1&ndash;2</p>\n</td>\n<td>\n<p dir=\"ltr\">Intermediate-1</p>\n</td>\n<td>\n<p dir=\"ltr\">14.2 years</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">3&ndash;4</p>\n</td>\n<td>\n<p dir=\"ltr\">Intermediate-2</p>\n</td>\n<td>\n<p dir=\"ltr\">4 years</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">5&ndash;6</p>\n</td>\n<td>\n<p dir=\"ltr\">High</p>\n</td>\n<td>\n<p dir=\"ltr\">1.5 years</p>\n</td>\n</tr>\n</tbody>\n</table>\n</div>",
        "estimation": [],
