        "evidence": "<p dir=\"ltr\">Addition of the selected points:</p>\n<div dir=\"ltr\">\n<table><colgroup><col width=\"200\" /><col width=\"136\" /><col width=\"113\" /></colgroup>\n<tbody>\n<tr>\n<td colspan=\"2\">\n<p dir=\"ltr\"><strong>Variable</strong></p>\n</td>\n<td>\n<p dir=\"ltr\"><strong>Points</strong></p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"5\">Age, years</td>\n<td>\n<p>&lt;45</p>\n</td>\n<td>0</td>\n</tr>\n<tr>\n<td>\n<p>45-54</p>\n</td>\n<td>2</td>\n</tr>\n<tr>\n<td>55-64</td>\n<td>\n<p dir=\"ltr\">3</p>\n</td>\n</tr>\n<tr>\n<td>\n<p>65-74</p>\n</td>\n<td>5</td>\n</tr>\n<tr>\n<td>\n<p>&gt;74</p>\n</td>\n<td>6</td>\n</tr>\n<tr>\n<td rowspan=\"6\">\n<p dir=\"ltr\">Mean arterial pressure, mmHg</p>\n</td>\n<td>\n<p dir=\"ltr\">&gt;159</p>\n</td>\n<td>\n<p dir=\"ltr\">4</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">130-159</p>\n</td>\n<td>\n<p dir=\"ltr\">3</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">110-129</p>\n</td>\n<td>\n<p dir=\"ltr\">2</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">70-109</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">50-69</p>\n</td>\n<td>\n<p dir=\"ltr\">2</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">&le;49</p>\n</td>\n<td>\n<p dir=\"ltr\">4</p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"7\">\n<p dir=\"ltr\">Heart rate, beats per minute</p>\n</td>\n<td>\n<p dir=\"ltr\">&gt;179</p>\n</td>\n<td>\n<p dir=\"ltr\">4</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">140-179</p>\n</td>\n<td>\n<p dir=\"ltr\">3</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">110-139</p>\n</td>\n<td>\n<p dir=\"ltr\">2</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">70-109</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">55-69</p>\n</td>\n<td>\n<p dir=\"ltr\">2</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">40-54</p>\n</td>\n<td>\n<p dir=\"ltr\">3</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">&le;39</p>\n</td>\n<td>\n<p dir=\"ltr\">4</p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"7\">\n<p dir=\"ltr\">Respiratory rate, breaths per minute</p>\n</td>\n<td>\n<p dir=\"ltr\">&gt;49</p>\n</td>\n<td>\n<p dir=\"ltr\">4</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">35-49</p>\n</td>\n<td>\n<p dir=\"ltr\">3</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">25-34</p>\n</td>\n<td>\n<p dir=\"ltr\">1</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">12-24</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">10-11</p>\n</td>\n<td>\n<p dir=\"ltr\">1</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">6-9</p>\n</td>\n<td>\n<p dir=\"ltr\">2</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">&le;5</p>\n</td>\n<td>\n<p dir=\"ltr\">4</p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"4\">\n<p dir=\"ltr\">Peripheral oxygen saturation</p>\n</td>\n<td>\n<p dir=\"ltr\">&lt;75%</p>\n</td>\n<td>\n<p dir=\"ltr\">4</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">75-85%</p>\n</td>\n<td>\n<p dir=\"ltr\">3</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">86-89%</p>\n</td>\n<td>\n<p dir=\"ltr\">1</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">&gt;89%</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"5\">Glasgow Coma Scale</td>\n<td>\n<p dir=\"ltr\">&lt;5</p>\n</td>\n<td>\n<p dir=\"ltr\">4</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">5-7</p>\n</td>\n<td>\n<p dir=\"ltr\">3</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">8-10</p>\n</td>\n<td>\n<p dir=\"ltr\">2</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">11-13</p>\n</td>\n<td>\n<p dir=\"ltr\">1</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">&gt;13</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n</tbody>\n</table>\n</div>\n<p><span id=\"docs-internal-guid-190b4c47-7fff-4ff1-26e2-b8afa7d48ea9\"><span id=\"docs-internal-guid-190b4c47-7fff-4ff1-26e2-b8afa7d48ea9\">&nbsp;</p>",
        "facts": "<p dir=\"ltr\">Interpretation:</p>\n<div dir=\"ltr\">\n<table><colgroup><col width=\"224\" /><col width=\"155\" /></colgroup>\n<tbody>\n<tr>\n<td>\n<p dir=\"ltr\"><strong>REMS</strong></p>\n</td>\n<td>\n<p dir=\"ltr\"><strong>In-hospital mortality</strong></p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">0-2</p>\n</td>\n<td>\n<p dir=\"ltr\">0%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">3-5</p>\n</td>\n<td>\n<p dir=\"ltr\">1%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">6-9</p>\n</td>\n<td>\n<p dir=\"ltr\">3%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">10-11</p>\n</td>\n<td>\n<p dir=\"ltr\">4%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">12-13</p>\n</td>\n<td>\n<p dir=\"ltr\">10%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">14-15</p>\n</td>\n<td>\n<p dir=\"ltr\">17%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">16-17</p>\n</td>\n<td>\n<p dir=\"ltr\">38%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">18-19</p>\n</td>\n<td>\n<p dir=\"ltr\">75%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">20-21</p>\n</td>\n<td>\n<p dir=\"ltr\">56%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">22-23</p>\n</td>\n<td>\n<p dir=\"ltr\">66%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">24-26</p>\n</td>\n<td>\n<p dir=\"ltr\">100%</p>\n</td>\n</tr>\n</tbody>\n</table>\n</div>\n<p dir=\"ltr\"><span id=\"docs-internal-guid-b8401fa2-7fff-e0ed-6d3e-4642ff03a14e\"></p>\n<p dir=\"ltr\">Note that &lt;0.3% of patients had scores &gt;19, which may account for the paradoxical apparent decrease in events between scores of 19 and scores &gt;19.</p>",
        "estimation": [],
        "primary_complains": [
            "Injury/Trauma"
        ],
        "disease_treated": [
