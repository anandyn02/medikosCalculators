        "logic": "var calc_output=[]; \n\nvar respiratory_rate=parseFloat(respiratory_rate);\nvar oxygen=parseFloat(oxygen);\nvar oxygen_supplemental=parseFloat(oxygen_supplemental);\nvar temperature=parseFloat(temperature);\nvar systolic_bp=parseFloat(systolic_bp);\nvar heart_rate=parseFloat(heart_rate);\nvar avpu_score=parseFloat(avpu_score);\n\nvar u=respiratory_rate+oxygen+oxygen_supplemental+temperature+systolic_bp+heart_rate+avpu_score;\n\nvar msg=''; \nvar mini_msg=''; \n\nif(respiratory_rate==3||oxygen==3||oxygen_supplemental==3||temperature==3||systolic_bp==3||heart_rate==3||avpu_score==3){\n    msg='RED score<br/><br/>Assigned when an extreme variation in a single physiological parameter is present (i.e., a score of 3 in any one physiological parameter.<br/><br/>';\n    mini_msg='RED Score '\n} \nif(u>=7){\n    msg+='High score: Emergency assessment by a clinical/critical care outreach team with critical-care competencies and usually transfer of the patient to a higher dependency care area.';\n    mini_msg+='High Score'\n} else if(u==5||u==6){\n    msg+='Medium score: Urgent review by a clinician skilled with competencies in the assessment of acute illness.';\n    mini_msg+='Medium Score'\n} else if(u==0||u==1||u==2||u==3||u==4){\n    msg+='Low score: Assessment by a competent registered nurse who should decide if a change to frequency of clinical monitoring or an escalation of clinical care is required.';\n    mini_msg+='Low Score'\n} \n\ncalc_output.push({\n    name:'mini',\n    value:u.toFixed(0),\n    value_text:'points',\n    message:mini_msg\n}); \ncalc_output.push({\n    name:'1873_NEWS Score_result',\n    value:u.toFixed(0),\n    value_text:'points',\n    message:msg\n});",
