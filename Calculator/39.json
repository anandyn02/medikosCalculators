        "logic": "var calc_output = [];\n\nvar depressedmood = parseFloat(depressedmood);\nvar guilt = parseFloat(guilt);\nvar suicide = parseFloat(suicide);\nvar initialinsomnia = parseFloat(initialinsomnia);\nvar insomnia = parseFloat(insomnia);\nvar delayed = parseFloat(delayed);\nvar workinterests = parseFloat(workinterests);\nvar retardation = parseFloat(retardation);\nvar agitation = parseFloat(agitation)\nvar panxiety = parseFloat(panxiety)\nvar sanxiety = parseFloat(sanxiety)\nvar gastrosom = parseFloat(gastrosom)\nvar somaticsymptoms = parseFloat(somaticsymptoms);\nvar genitalsymptoms = parseFloat(genitalsymptoms);\nvar hypochondriasis = parseFloat(hypochondriasis);\nvar weightloss = parseFloat(weightloss);\nvar insight = parseFloat(insight);\n\n\nvar score = depressedmood + guilt + suicide + initialinsomnia + insomnia + delayed + workinterests + retardation + agitation + panxiety + sanxiety + gastrosom + somaticsymptoms + genitalsymptoms + hypochondriasis + weightloss + insight\n\nvar grade = ''\n\n\nif (score >= 0 && score <= 7) {\n    grade = 'Normal'\n} else if (score >= 8 && score <= 13) {\n    grade = 'Mild'\n} else if (score >= 14 && score <= 18) {\n    grade = 'Moderate'\n} else if (score >= 19 && score <= 22) {\n    grade = 'Severe'\n} else if (score >= 23) {\n    grade = 'Very severe'\n}\n\n\n//results \n\nif (score <= 7) {\n    calc_output.push({\n        name: 'mini',\n        value: 'No depression',\n        value_text: '',\n        message: score + ' points'\n    });\n    calc_output.push({\n        name: 'score',\n        value: score,\n        value_text: 'points',\n        message: 'HAM-D Score'\n    });\n    calc_output.push({\n        name: 'grade',\n        value: 'Normal',\n        value_text: '',\n        message: 'No depression'\n    });\n} else if (score > 7) {\n    calc_output.push({\n        name: 'mini',\n        value: grade,\n        value_text: ' depression',\n        message: score + ' points'\n    });\n    calc_output.push({\n        name: 'score',\n        value: score,\n        value_text: 'points',\n        message: 'HAM-D Score'\n    });\n    calc_output.push({\n        name: 'grade',\n        value: grade,\n        value_text: 'depression',\n        message: ''\n    });\n}",
