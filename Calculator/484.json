    "id": "484",
    "title": "Pediatric Respiratory Assessment Measure (PRAM) for Asthma Exacerbation Severity",
    "desc": "The Pediatric Respiratory Assessment Measure (PRAM) measures severity of airway obstruction in pediatric patients using clinical observations.",
    "data": {
        "orgreference": [
            {
                "href": "https://www.ncbi.nlm.nih.gov/pubmed/11113831",
                "text": "Chalut DS, Ducharme FM, Davis GM. The Preschool Respiratory Assessment Measure (PRAM): a responsive index of acute asthma severity. J Pediatr. 2000;137:762–768."
            }
        ],
        "other_refer": [
            {
                "href": "",
                "text": ""
            }
        ],
        "evidence": "<p>Addition of selected points.</p>",
        "facts": "<p><strong>Score interpretation:</strong></p>\n<div class=\"table-responsive\">\n<table class=\"table table-bordered table-hover\">\n<tbody>\n<tr>\n<th>Score</th>\n<th>Asthma Severity</th>\n</tr>\n<tr>\n<td>0-3</td>\n<td>Mild</td>\n</tr>\n<tr>\n<td>4-7</td>\n<td>Moderate</td>\n</tr>\n<tr>\n<td>8-12</td>\n<td>Severe</td>\n</tr>\n</tbody>\n</table>\n</div>",
        "estimation": [],
        "primary_complains": [
            "Shortness of Breath",
            "Wheezing"
        ],
        "disease_treated": [
            "Asthma"
        ],
        "logic": "var calc_output = [];\nvar v = parseInt(wheezing) + parseInt(air) + parseInt(scal) + parseInt(sup) + parseInt(o2);\nvar msg;\n\nif (v < 4) {\n    msg = 'Mild asthma';\n}\nif (v > 3 && v < 8) {\n    msg = 'Moderate asthma';\n}\nif (v > 7) {\n    msg = 'Severe asthma';\n}\n\ncalc_output.push({ name: 'mini', value: v.toFixed(0), value_text: 'points', message: msg });\ncalc_output.push({ name: '3384_Pediatric Respiratory Assessment Measure_result', value: v.toFixed(0), value_text: 'points', message: msg });",
