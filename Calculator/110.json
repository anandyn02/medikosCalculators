        ],
        "evidence": "<p dir=\"ltr\">SAVE Score = addition of the selected points (below) minus 6</p>\n<div dir=\"ltr\">\n<table><colgroup><col width=\"298\" /><col width=\"71\" /><col width=\"80\" /></colgroup>\n<tbody>\n<tr>\n<td colspan=\"2\">\n<p dir=\"ltr\"><strong>Variable</strong></p>\n</td>\n<td>\n<p dir=\"ltr\"><strong>Points</strong></p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"4\">\n<p dir=\"ltr\">Age, years</p>\n</td>\n<td>\n<p dir=\"ltr\">18-38</p>\n</td>\n<td>\n<p dir=\"ltr\">7</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">39-52</p>\n</td>\n<td>\n<p dir=\"ltr\">4</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">53-62</p>\n</td>\n<td>\n<p dir=\"ltr\">3</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">&ge;63</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"3\">\n<p dir=\"ltr\">Weight</p>\n</td>\n<td>\n<p dir=\"ltr\">&lt;65 kg (&lt;143.3 lbs)</p>\n</td>\n<td>\n<p dir=\"ltr\">1</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">65-89 kg (143.3-196.2 lbs)</p>\n</td>\n<td>\n<p dir=\"ltr\">2</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">&gt;89 kg (&gt;196.2 lbs)</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n<tr>\n<td colspan=\"3\">\n<p dir=\"ltr\"><strong>Etiology of cardiogenic shock*</strong></p>\n</td>\n</tr>\n<tr>\n<td colspan=\"2\">\n<p dir=\"ltr\">Myocarditis</p>\n</td>\n<td>\n<p dir=\"ltr\">3</p>\n</td>\n</tr>\n<tr>\n<td colspan=\"2\">\n<p dir=\"ltr\">Refractory VT/VF</p>\n</td>\n<td>\n<p dir=\"ltr\">2</p>\n</td>\n</tr>\n<tr>\n<td colspan=\"2\">\n<p dir=\"ltr\">Post heart or lung transplantation</p>\n</td>\n<td>\n<p dir=\"ltr\">3</p>\n</td>\n</tr>\n<tr>\n<td colspan=\"2\">\n<p dir=\"ltr\">Congenital heart disease</p>\n</td>\n<td>\n<p dir=\"ltr\">-3</p>\n</td>\n</tr>\n<tr>\n<td colspan=\"3\">\n<p dir=\"ltr\"><strong>Renal</strong></p>\n</td>\n</tr>\n<tr>\n<td colspan=\"2\">\n<p dir=\"ltr\">Acute renal failure (defined as acute renal insufficiency (e.g. creatinine &gt;1.5 mg/dL (132.6 &micro;mol/L) with or without RRT)</p>\n</td>\n<td>\n<p dir=\"ltr\">-3</p>\n</td>\n</tr>\n<tr>\n<td colspan=\"2\">\n<p dir=\"ltr\">Chronic renal failure (defined as either kidney damage or <abbr title=\"Glomerular filtration rate\">GFR</abbr> &lt;60 mL/min/1.73 m&sup2; for &ge;3 months)</p>\n</td>\n<td>\n<p dir=\"ltr\">-6</p>\n</td>\n</tr>\n<tr>\n<td colspan=\"2\">\n<p dir=\"ltr\">HCO₃ before ECMO &le;15 mmol/L (91.5 mg/dL) (worst value within 6 hrs before ECMO cannulation)</p>\n</td>\n<td>\n<p dir=\"ltr\">-3</p>\n</td>\n</tr>\n<tr>\n<td colspan=\"3\">\n<p dir=\"ltr\"><strong>Respiratory</strong></p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"3\">\n<p dir=\"ltr\">Duration of intubation prior to initiation of ECMO,&nbsp;hrs</p>\n</td>\n<td>\n<p dir=\"ltr\">&le;10</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">11-29</p>\n</td>\n<td>\n<p dir=\"ltr\">-2</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">&ge;30</p>\n</td>\n<td>\n<p dir=\"ltr\">-4</p>\n</td>\n</tr>\n<tr>\n<td colspan=\"2\">\n<p dir=\"ltr\">Peak inspiratory pressure &le;20 cm H₂O (&le;2.0 kPa)</p>\n</td>\n<td>\n<p dir=\"ltr\">3</p>\n</td>\n</tr>\n<tr>\n<td colspan=\"3\">\n<p dir=\"ltr\"><strong>Cardiac</strong></p>\n</td>\n</tr>\n<tr>\n<td colspan=\"2\">\n<p dir=\"ltr\">Pre-ECMO cardiac arrest</p>\n</td>\n<td>\n<p dir=\"ltr\">-2</p>\n</td>\n</tr>\n<tr>\n<td colspan=\"2\">\n<p dir=\"ltr\">Diastolic blood pressure before ECMO &ge;40 mmHg (worst value within 6 hrs before ECMO cannulation)</p>\n</td>\n<td>\n<p dir=\"ltr\">3</p>\n</td>\n</tr>\n<tr>\n<td colspan=\"2\">\n<p dir=\"ltr\">Pulse pressure before ECMO &le;20 mmHg (worst value within 6 hrs before ECMO cannulation)</p>\n</td>\n<td>\n<p dir=\"ltr\">-2</p>\n</td>\n</tr>\n<tr>\n<td colspan=\"3\">\n<p dir=\"ltr\"><strong>Other organ failures pre-ECMO</strong></p>\n</td>\n</tr>\n<tr>\n<td colspan=\"2\">\n<p dir=\"ltr\">Liver failure (defined as bilirubin &ge;33 &micro;mol/L (1.9 mg/dL) or elevation of serum aminotransferases (ALT or AST) &gt;70 UI/L)</p>\n</td>\n<td>\n<p dir=\"ltr\">-3</p>\n</td>\n</tr>\n<tr>\n<td colspan=\"2\">\n<p dir=\"ltr\">CNS dysfunction (includes combined neurotrauma, stroke, encephalopathy, cerebral embolism, seizure/epileptic syndromes)</p>\n</td>\n<td>\n<p dir=\"ltr\">-3</p>\n</td>\n</tr>\n</tbody>\n</table>\n</div>\n<p dir=\"ltr\">*If any other cause of cardiogenic shock, no points are added.</p>",
        "facts": "<p dir=\"ltr\">Interpretation:</p>\n<div dir=\"ltr\">\n<table><colgroup><col width=\"*\" /><col width=\"*\" /><col width=\"*\" /></colgroup>\n<tbody>\n<tr>\n<td>\n<p dir=\"ltr\"><strong>SAVE Score</strong></p>\n</td>\n<td>\n<p dir=\"ltr\"><strong>Risk class</strong></p>\n</td>\n<td>\n<p dir=\"ltr\"><strong>In-hospital survival</strong></p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">&gt;5</p>\n</td>\n<td>\n<p dir=\"ltr\">I</p>\n</td>\n<td>\n<p dir=\"ltr\">75%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">1 to 5</p>\n</td>\n<td>\n<p dir=\"ltr\">II</p>\n</td>\n<td>\n<p dir=\"ltr\">58%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">-4 to 0</p>\n</td>\n<td>\n<p dir=\"ltr\">III</p>\n</td>\n<td>\n<p dir=\"ltr\">42%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">-9 to -5</p>\n</td>\n<td>\n<p dir=\"ltr\">IV</p>\n</td>\n<td>\n<p dir=\"ltr\">30%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">&le;-10</p>\n</td>\n<td>\n<p dir=\"ltr\">V</p>\n</td>\n<td>\n<p dir=\"ltr\">18%</p>\n</td>\n</tr>\n</tbody>\n</table>\n</div>\n<p><span id=\"docs-internal-guid-8d57263e-7fff-e9f3-d0ad-23ed0d1e162a\"><span id=\"docs-internal-guid-8d57263e-7fff-e9f3-d0ad-23ed0d1e162a\"><br /></p>",
