        "evidence": "<p dir=\"ltr\">Addition of the selected points:</p>\n<div dir=\"ltr\">\n<table><colgroup><col width=\"149\"><col width=\"149\"><col width=\"70\"></colgroup>\n<tbody>\n<tr>\n<td colspan=\"2\">\n<p dir=\"ltr\"><strong>Variable</strong></p>\n</td>\n<td>\n<p dir=\"ltr\"><strong>Points</strong></p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"3\">\n<p dir=\"ltr\">Age, years</p>\n</td>\n<td>\n<p dir=\"ltr\">&lt;40</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">40-69</p>\n</td>\n<td>\n<p dir=\"ltr\">1</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">&ge;70</p>\n</td>\n<td>\n<p dir=\"ltr\">2</p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"2\">\n<p dir=\"ltr\">Sex</p>\n</td>\n<td>\n<p dir=\"ltr\">Female</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Male</p>\n</td>\n<td>\n<p dir=\"ltr\">1</p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"2\">\n<p dir=\"ltr\">Previous lower GI bleeding admission</p>\n</td>\n<td>\n<p dir=\"ltr\">No</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Yes</p>\n</td>\n<td>\n<p dir=\"ltr\">1</p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"2\">\n<p dir=\"ltr\"><abbr title=\"Digital rectal exam\">DRE</abbr> findings</p>\n</td>\n<td>\n<p dir=\"ltr\">No blood</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Blood</p>\n</td>\n<td>\n<p dir=\"ltr\">1</p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"4\">\n<p dir=\"ltr\">Heart rate, bpm</p>\n</td>\n<td>\n<p dir=\"ltr\">&lt;70</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">70-89</p>\n</td>\n<td>\n<p dir=\"ltr\">1</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">90-109</p>\n</td>\n<td>\n<p dir=\"ltr\">2</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">&ge;110</p>\n</td>\n<td>\n<p dir=\"ltr\">3</p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"5\">\n<p dir=\"ltr\">Systolic blood pressure, mmHg</p>\n</td>\n<td>\n<p dir=\"ltr\">50-89</p>\n</td>\n<td>\n<p dir=\"ltr\">5</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">90-119</p>\n</td>\n<td>\n<p dir=\"ltr\">4</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">120-129</p>\n</td>\n<td>\n<p dir=\"ltr\">3</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">130-159</p>\n</td>\n<td>\n<p dir=\"ltr\">2</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">&ge;160</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"6\">\n<p dir=\"ltr\">Hemoglobin, g/L (g/dL)</p>\n</td>\n<td>\n<p dir=\"ltr\">36-69 (3.6-6.9)</p>\n</td>\n<td>\n<p dir=\"ltr\">22</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">70-89 (7-8.9)</p>\n</td>\n<td>\n<p dir=\"ltr\">17</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">90-109 (9-10.9)</p>\n</td>\n<td>\n<p dir=\"ltr\">13</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">110-129 (11-12.9)</p>\n</td>\n<td>\n<p dir=\"ltr\">8</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">130-159 (13-15.9)</p>\n</td>\n<td>\n<p dir=\"ltr\">4</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">&ge;160 (16)</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n</tbody>\n</table>\n</div>",
        "facts": "<p dir=\"ltr\">Interpretation:</p>\n<div dir=\"ltr\">\n<table><colgroup><col width=\"73\"><col width=\"140\"><col width=\"140\"></colgroup>\n<tbody>\n<tr>\n<td>\n<p dir=\"ltr\"><strong>Score </strong></p>\n</td>\n<td>\n<p dir=\"ltr\"><strong>Probability of safe discharge*</strong></p>\n</td>\n<td>\n<p dir=\"ltr\"><strong>Recommendation**</strong></p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">0-2</p>\n</td>\n<td>\n<p dir=\"ltr\">99%</p>\n</td>\n<td rowspan=\"5\">\n<p dir=\"ltr\">Consider discharge, with appropriate precautions</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">3-4</p>\n</td>\n<td>\n<p dir=\"ltr\">98%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">5</p>\n</td>\n<td>\n<p dir=\"ltr\">97%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">6-7</p>\n</td>\n<td>\n<p dir=\"ltr\">96%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">8</p>\n</td>\n<td>\n<p dir=\"ltr\">95%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">9</p>\n</td>\n<td>\n<p dir=\"ltr\">93%</p>\n</td>\n<td rowspan=\"11\">\n<p dir=\"ltr\">Admission with further workup and resuscitation as necessary</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">10</p>\n</td>\n<td>\n<p dir=\"ltr\">91%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">11</p>\n</td>\n<td>\n<p dir=\"ltr\">89%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">12-13</p>\n</td>\n<td>\n<p dir=\"ltr\">87-89%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">14-15</p>\n</td>\n<td>\n<p dir=\"ltr\">77-81%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">16-17</p>\n</td>\n<td>\n<p dir=\"ltr\">67-72%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">18-20</p>\n</td>\n<td>\n<p dir=\"ltr\">50-62%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">21-23</p>\n</td>\n<td>\n<p dir=\"ltr\">33-45%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">24-26</p>\n</td>\n<td>\n<p dir=\"ltr\">20-28%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">27-29</p>\n</td>\n<td>\n<p dir=\"ltr\">11-16%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">&ge;30</p>\n</td>\n<td>\n<p dir=\"ltr\">0-1%</p>\n</td>\n</tr>\n</tbody>\n</table>\n</div>\n<p><span id=\"docs-internal-guid-136c921a-f747-7c1f-b97c-d04769fa2cea\">*Defined as&nbsp;absence of rebleeding, blood transfusion, therapeutic intervention, 28 day readmission, or death.</span></p>\n<p><span id=\"docs-internal-guid-136c921a-f747-7c1f-b97c-d04769fa2cea\">**From <a href=\"https://amj.amegroups.com/article/view/4082/4832\" target=\"_blank\" rel=\"noopener\">Ca&ntilde;amares 2017</a>.</span></p>",
