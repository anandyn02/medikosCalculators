        "logic": "var calc_output = [];\n\nvar age = parseFloat(age);\nvar sex = parseFloat(sex);\nvar previosgiadmit = parseFloat(previosgiadmit);\nvar dre = parseFloat(dre);\nvar hr = parseFloat(hr);\nvar sbp = parseFloat(sbp);\nvar hb = parseFloat(hb);\n\n\nvar score = age + sex + previosgiadmit + dre + hr + sbp + hb;\n\nvar discharge, rec, mini_rec;\n\nif (score <= 8) {\n  rec = 'Consider discharge, with appropriate precautions.';\n  mini_rec = 'Consider discharge';\n}\nelse {\n  rec = 'Discharge NOT recommended. Consider admission with further workup and resuscitation as necessary.';\n\tmini_rec = 'Discharge NOT recommended';\n}\n\nif (score <= 2) {\n    discharge = '99';\n}    \nelse if (score == 3 | score == 4) { \n    discharge = '98'; \n}\nelse if (score == 5) { \n    discharge = '97'; \n} \nelse if (score == 6 | score == 7) { \n    discharge = '96'; \n} \nelse if (score == 8) { \n    discharge = '95'; \n} \nelse if (score == 9) { \n    discharge = '93'; \n} \nelse if (score == 10) { \n    discharge = '91'; \n} \nelse if (score == 11) { \n    discharge = '89'; \n} \nelse if (score == 12 | score == 13) { \n    discharge = '87-89'; \n} \nelse if (score == 14 | score == 15) { \n    discharge = '77-81'; \n} \nelse if (score == 16 | score == 17) { \n    discharge = '67-72'; \n} \nelse if (score >= 18 && score <= 20) { \n    discharge = '50-62'; \n} \nelse if (score >= 21 && score <= 23) { \n    discharge = '33-45'; \n} \nelse if (score >= 24 && score <= 26) { \n    discharge = '20-28'; \n} \nelse if (score >= 27 && score <= 29) { \n    discharge = '11-16'; \n} \nelse if (score >= 30) { \n    discharge = '0-1'; \n} \n//results \ncalc_output.push({\n    name: 'mini',\n    value: score,\n    value_text: 'points',\n    message: mini_rec\n    });\ncalc_output.push({\n    name: '10042_Oakland Score_result (score)',\n    value: score,\n    value_text: 'points',\n    message: 'Oakland Score (<guideline id =\"502\">ACG guideline</guideline>)'\n    });\ncalc_output.push({\n    name: '10042_Oakland Score_result (probability)',\n    value: discharge, \n    value_text: '%',\n    message: 'Probability of safe discharge (absence of rebleeding, blood transfusion, therapeutic intervention, 28 day readmission, or death). ' + rec\n});\n",
