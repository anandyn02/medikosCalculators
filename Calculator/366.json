{
    "id": "366",
    "title": "RIETE Score for Risk of Hemorrhage in Pulmonary Embolism Treatment",
    "desc": "The RIETE Score for Risk of Hemorrhage in PE Treatment determines the risk of major bleeding during anticoagulant therapy for pulmonary embolism.",
    "data": {
        "orgreference": [
            {
                "href": "https://www.ncbi.nlm.nih.gov/pubmed/18612534",
                "text": "Ruíz-Giménez N, Suárez C, González R, Nieto JA, Todolí JA, Samperiz AL, Monreal M; RIETE Investigators. Predictive variables for major bleeding events in patients presenting with documented acute venous thromboembolism. Findings from the RIETE Registry.Thromb Haemost. 2008 Jul;100(1):26-31. doi: 10.1160/TH08-03-0193."
            }
        ],
        "other_refer": [],
        "evidence": "<p>Addition of the selected points, see below:</p>",
        "facts": "<div class=\"table-responsive\">\n<table class=\"table table-bordered\">\n<tbody>\n<tr>\n<th>Risk Factor</th>\n<th>Point Value</th>\n</tr>\n<tr>\n<td>Recent Major Bleeding</td>\n<td>2</td>\n</tr>\n<tr>\n<td>Cr &gt;1.2 mg/dL</td>\n<td>1.5</td>\n</tr>\n<tr>\n<td>Anemia</td>\n<td>1.5</td>\n</tr>\n<tr>\n<td>Cancer</td>\n<td>1</td>\n</tr>\n<tr>\n<td>Clinically-overt PE</td>\n<td>1</td>\n</tr>\n<tr>\n<td>Age &gt;75</td>\n<td>1</td>\n</tr>\n</tbody>\n</table>\n</div>",
        "estimation": [],
        "primary_complains": [
            "Chest Pain",
            "Shortness of Breath"
        ],
        "disease_treated": [
            "Pulmonary Embolism"
        ],
        "logic": "var calc_output = [];\nvar msg, recs, mini_msg;\nvar u = parseInt(major_bleeding) + parseInt(creatinine) + parseInt(anemia) + parseInt(malignancy) + parseInt(pulmonary_embolism) + parseInt(age_75);\nif (creatinine == 1.5) {\n    u += .5\n};\nif (anemia == 1.5) {\n    u += .5\n};\nif (u == 0) {\n    msg = 'Low Risk.<br/>0.1% Risk of Major Bleeding';\n    recs = 'Initiation of anticoagulation reasonable.';\n    mini_msg = 'Low Risk of Major Bleeding.'\n};\nif (u > 0 && u < 5) {\n    msg = 'Intermediate Risk.<br/>2.8% Risk of Major Bleeding';\n    recs = 'Carefully consider risks and benefits of anticoagulation prior to starting therapy.';\n    mini_msg = 'Intermediate Risk of Major Bleeding.'\n};\nif (u > 4) {\n    msg = 'High Risk.<br/>6.2% Risk of Major Bleeding';\n    recs = 'Alternative options should be considered unless there is a strong demonstrable clinical need for anticoagulation.';\n    mini_msg = 'High Risk of Major Bleeding.'\n};\ncalc_output.push({\n    name: 'mini',\n    value: u.toFixed(1),\n    value_text: 'points',\n    message: mini_msg\n});\ncalc_output.push({\n    name: '1786_RIETE Score_result',\n    value: u.toFixed(1),\n    value_text: 'points',\n    message: msg + '<br/><br/>' + recs\n});",
