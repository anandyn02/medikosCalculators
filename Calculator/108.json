        "logic": "var cardio = cardio || 0;\nvar neuro = neuro || 0;\nvar resp = resp || 0;\nvar renal = renal || 0;\nvar hepatic = hepatic || 0;\nvar hema = hema || 0;\nvar wbc = wbc || 0;\nvar fever2 = fever2 || 0;\nvar age = age || 0;\nvar hyper = hyper || 0;\nvar hypo = hypo || 0;\n\nvar calc_output = [];\n\nvar parta = parseFloat(fever) + parseFloat(lab);\nvar partb = parseFloat(jaundice) + parseFloat(lab2);\nvar partc = parseFloat(bili) + parseFloat(evidence);\nvar grade3 = parseFloat(cardio) + parseFloat(neuro) + parseFloat(resp) + parseFloat(renal) + parseFloat(hepatic) + parseFloat(hema);\nvar grade2 = parseFloat(wbc) + parseFloat(fever2) + parseFloat(age) + parseFloat(hyper) + parseFloat(hypo);\n\nvar diag, severity, risk, grade;\nvar msg = 'Diagnosis of acute cholangitis';\n\nif (parta > 0 && partb > 0 && partc > 0) {\n  diag = 'Definite';\n  if (grade3 > 0) {\n    severity = 'Severe';\n    grade = 'III';\n    risk = 'Recommendation: initial treatment with antibiotics, urgent biliary drainage, appropriate respiratory/circulatory management';\n  } else if (grade2 > 1) {\n    severity = 'Moderate';\n    risk = 'Recommendation: antibiotics and general supportive care; early endoscopic or percutaneous transhepatic biliary drainage is indicated';\n    grade = 'II';\n  } else if (grade2 <= 1 && grade3 == 0) { \n    severity = 'Mild';\n    risk = 'Recommendation: antibiotics and general supportive care; consider biliary drainage if no response to initial treatment';\n    grade = 'I';\n  } else {\n    grade = \"not assigned\";\n    risk = \"\";\n    severity = \"No grade for\";\n  }  \n} else if (parta > 0 && (partb > 0 || partc > 0)) {\n  diag = 'Suspected';\n  if (grade3 > 0) {\n    severity = 'Severe';\n    grade = 'III';\n    risk = 'Recommendation: initial treatment with antibiotics, urgent biliary drainage, appropriate respiratory/circulatory management';\n  } else if (grade2 > 1) {\n    severity = 'Moderate';\n    risk = 'Recommendation: antibiotics and general supportive care; early endoscopic or percutaneous transhepatic biliary drainage is indicated';\n    grade = 'II';\n  } else if (grade2 <= 1 && grade3 == 0) { \n    severity = 'Mild';\n    risk = 'Recommendation: antibiotics and general supportive care; consider biliary drainage if no response to initial treatment';\n    grade = 'I';\n  } else {\n    grade = \"not assigned\";\n    risk = \"\";\n    severity = \"No grade for\";\n  }\n} else {\n  diag = '';\n  msg = 'Entry criteria not met for acute cholangitis diagnosis';\n  grade = 'not assigned';\n}\n\n//results\nif(parta > 0 && (partb > 0 || partc > 0)){\ncalc_output.push({\n    name: 'mini',\n    value: diag,\n    value_text: '',\n    message: 'Grade ' + grade\n});\n} else {\ncalc_output.push({\n    name: 'mini',\n    value: '',\n    value_text: '',\n    message: msg\n});}\ncalc_output.push({\n    name: 'diag',\n    value: diag,\n    value_text: '',\n    message: msg\n});\nif(parta > 0 && (partb > 0 || partc > 0)){\ncalc_output.push({\n    name: 'grade',\n    value: 'Grade ' + grade,\n    value_text: '',\n    message: severity + ' acute cholangitis<br/><br/>' + risk \n});\n}",
