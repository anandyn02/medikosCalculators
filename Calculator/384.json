        "logic": "var calc_output = [];\nsystolic_bp = parseInt(systolic_bp);\nheart_rate = parseInt(heart_rate);\nrespiratory_rate = parseInt(respiratory_rate);\ntemperature = parseInt(temperature);\navpu_score = parseInt(avpu_score);\nvar v = systolic_bp + heart_rate + respiratory_rate + temperature + avpu_score;\nvar msg = '';\nvar msgalt = '';\nvar mini_msg = '';\nif (v == 0 || v == 1 || v == 2) {\n    msg = '7.9% chance of ICU admission or death within 60 days.';\n    mini_msg = '7.9% chance of ICU admission.'\n} else if (v == 3 || v == 4) {\n    msg = '12.7% chance of ICU admission or death within 60 days.';\n    mini_msg = '12.7% chance of ICU admission.'\n} else if (v >= 5) {\n    msg = '30% chance of ICU admission or death within 60 days. Consider higher level of care.';\n    mini_msg = '30% chance of ICU admission.'\n}\nif (systolic_bp == 3 || heart_rate == 3 || respiratory_rate == 3 || temperature == 3 || avpu_score == 3) {\n    msgalt = 'For any single physiological parameter with assigned score of 3, consider higher level of care for patient.'\n}\ncalc_output.push({\n    name: 'mini',\n    value: v.toFixed(0),\n    value_text: 'points',\n    message: mini_msg\n});\ncalc_output.push({\n    name: '1875_MEWS Score_result',\n    value: v.toFixed(0),\n    value_text: 'points',\n    message: msg + '<br/><br/>' + msgalt\n});",
