    "desc": "The Child-Pugh Score for Cirrhosis Mortality estimates cirrhosis severity.",
    "data": {
        "orgreference": [
            {
                "href": "https://pubmed.ncbi.nlm.nih.gov/4950264/",
                "text": "Child CG, Turcotte JG. Surgery and portal hypertension. In: The liver and portal hypertension. Edited by CG Child. Philadelphia: Saunders 1964:50-64."
            }
        ],
        "other_refer": [],
        "evidence": "<p>Addition of assigned points.</p>",
        "facts": "<p><calculator id=\"674\">Encephalopathy Grades</calculator> (from the <a href=\"https://www.fda.gov/downloads/Drugs/GuidanceComplianceRegulatoryInformation/Guidances/UCM072123.pdf\" target=\"_blank\" rel=\"noopener\">FDA</a>)</p>\n<ul>\n<li>Grade 0: normal consciousness, personality, neurological examination, electroencephalogram</li>\n<li>Grade 1: restless, sleep disturbed, irritable/agitated, tremor, impaired handwriting, 5 cps waves</li>\n<li>Grade 2: lethargic, time-disoriented, inappropriate, asterixis, ataxia, slow triphasic waves</li>\n<li>Grade 3: somnolent, stuporous, place-disoriented, hyperactive reflexes, rigidity, slower waves</li>\n<li>Grade 4: unrousable coma, no personality/behavior, decerebrate, slow 2-3 cps delta activity</li>\n</ul>",
        "estimation": [],
        "primary_complains": [
            "Abdominal Pain",
            "Jaundice"
        ],
        "disease_treated": [
            "Cirrhosis",
            "Hepatitis"
        ],
        "logic": "var calc_output = [];\nvar v = parseFloat(bilirubin) + parseFloat(albumin) + parseFloat(inr) + parseFloat(ascites) + parseFloat(encephalopathy);\nvar msg = '';\nvar mini_msg = '';\nif (v < 7) { msg = 'Child Class A<br/><br/>Life Expectancy : 15-20 years<br/><br/>Abdominal surgery peri-operative mortality: 10%';\n    mini_msg = 'Child Class A' }\nif (v > 6 && v < 10) { msg = 'Child Class B<br/><br/>Indication for transplant evaluation<br/><br/>Abdominal surgery peri-operative mortality: 30%';\n    mini_msg = 'Child Class B' }\nif (v > 9) { msg = 'Child Class C<br/><br/>Life Expectancy : 1-3 years<br/><br/>Abdominal surgery peri-operative mortality: 82%';\n    mini_msg = 'Child Class C' }\ncalc_output.push({ \n    name: 'mini', \n    value: v.toFixed(0), \n    value_text: 'points', \n    message: mini_msg \n});\ncalc_output.push({ \n    name: '340_Child-Pugh Score_result', \n    value: v.toFixed(0), \n    value_text: 'points', \n    message: msg \n});",
