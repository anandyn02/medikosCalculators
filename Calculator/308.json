        "evidence": "<p dir=\"ltr\"><span>The VURx is calculated by the addition of the selected points:</span><b></b></p>\n<div dir=\"ltr\" align=\"left\">\n<table style=\"width: 87.5289%;\"><colgroup><col style=\"width: 42.5714%;\"><col style=\"width: 40.5714%;\"><col style=\"width: 16.8571%;\"></colgroup>\n<tbody>\n<tr>\n<td colspan=\"2\">\n<p dir=\"ltr\"><strong>Variable</strong></p>\n</td>\n<td>\n<p dir=\"ltr\"><strong>Points</strong></p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"2\">\n<p dir=\"ltr\"><span>Gender</span></p>\n</td>\n<td>\n<p dir=\"ltr\"><span>Male</span></p>\n</td>\n<td>\n<p dir=\"ltr\"><span>0</span></p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\"><span>Female</span></p>\n</td>\n<td>\n<p dir=\"ltr\"><span>1</span></p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"3\">\n<p dir=\"ltr\"><span>VUR timing</span></p>\n</td>\n<td>\n<p dir=\"ltr\"><span>Voiding</span></p>\n</td>\n<td>\n<p dir=\"ltr\"><span>1</span></p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\"><span>Late filling</span></p>\n</td>\n<td>\n<p dir=\"ltr\"><span>2</span></p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\"><span>Early to mid filling</span></p>\n</td>\n<td>\n<p dir=\"ltr\"><span>3</span></p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"2\">\n<p dir=\"ltr\"><span>Ureteral anomalies</span></p>\n</td>\n<td>\n<p dir=\"ltr\"><span>Absent</span></p>\n</td>\n<td>\n<p dir=\"ltr\"><span>0</span></p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\"><span>Present</span></p>\n</td>\n<td>\n<p dir=\"ltr\"><span>1</span></p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"2\">\n<p dir=\"ltr\"><span>VUR grade</span></p>\n</td>\n<td>\n<p dir=\"ltr\"><span>Low to moderate</span></p>\n</td>\n<td>\n<p dir=\"ltr\"><span>0</span></p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\"><span>High</span></p>\n</td>\n<td>\n<p dir=\"ltr\"><span>1</span></p>\n</td>\n</tr>\n</tbody>\n</table>\n</div>\n<p></p>",
        "facts": "<p dir=\"ltr\"><span>Interpretation:</span><b></b></p>\n<div dir=\"ltr\" align=\"left\">\n<table style=\"width: 60.5081%;\"><colgroup><col style=\"width: 35.2169%;\"><col style=\"width: 64.7831%;\"></colgroup>\n<tbody>\n<tr>\n<td>\n<p dir=\"ltr\"><strong>VURx</strong></p>\n</td>\n<td>\n<p dir=\"ltr\"><strong>Rate of Resolution</strong></p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\"><span>1</span></p>\n</td>\n<td>\n<p dir=\"ltr\"><span>89%</span></p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\"><span>2</span></p>\n</td>\n<td>\n<p dir=\"ltr\"><span>69%</span></p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\"><span>3</span></p>\n</td>\n<td>\n<p dir=\"ltr\"><span>53%</span></p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\"><span>4</span></p>\n</td>\n<td>\n<p dir=\"ltr\"><span>16%</span></p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\"><span>5-6</span></p>\n</td>\n<td>\n<p dir=\"ltr\"><span>11%</span></p>\n</td>\n</tr>\n</tbody>\n</table>\n</div>\n<p></p>",
