        "evidence": "<p dir=\"ltr\">Addition of selected points:</p>\n<div dir=\"ltr\">\n<table><colgroup><col width=\"144\"><col width=\"93\"><col width=\"61\"></colgroup>\n<tbody>\n<tr>\n<td colspan=\"2\">\n<p dir=\"ltr\"><strong>Criteria</strong></p>\n</td>\n<td>\n<p dir=\"ltr\"><strong>Points</strong></p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"4\">\n<p dir=\"ltr\"><strong>Vocalization</strong></p>\n<p dir=\"ltr\">Whimpering, crying</p>\n</td>\n<td>\n<p dir=\"ltr\">Absent</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Mild</p>\n</td>\n<td>\n<p dir=\"ltr\">1</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Moderate</p>\n</td>\n<td>\n<p dir=\"ltr\">2</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Severe</p>\n</td>\n<td>\n<p dir=\"ltr\">3</p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"4\">\n<p dir=\"ltr\">Facial expression</p>\n<p dir=\"ltr\">Tense, frowning, grimacing, frightened</p>\n</td>\n<td>\n<p dir=\"ltr\">Absent</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Mild</p>\n</td>\n<td>\n<p dir=\"ltr\">1</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Moderate</p>\n</td>\n<td>\n<p dir=\"ltr\">2</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Severe</p>\n</td>\n<td>\n<p dir=\"ltr\">3</p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"4\">\n<p dir=\"ltr\"><strong>Body language</strong></p>\n<p dir=\"ltr\">Fidgeting, rocking, guarding, withdrawn</p>\n</td>\n<td>\n<p dir=\"ltr\">Absent</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Mild</p>\n</td>\n<td>\n<p dir=\"ltr\">1</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Moderate</p>\n</td>\n<td>\n<p dir=\"ltr\">2</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Severe</p>\n</td>\n<td>\n<p dir=\"ltr\">3</p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"4\">\n<p dir=\"ltr\"><strong>Physiological changes</strong></p>\n<p dir=\"ltr\">Temp, pulse or BP elevations, diaphoresis, flushing/pallor</p>\n</td>\n<td>\n<p dir=\"ltr\">Absent</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Mild</p>\n</td>\n<td>\n<p dir=\"ltr\">1</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Moderate</p>\n</td>\n<td>\n<p dir=\"ltr\">2</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Severe</p>\n</td>\n<td>\n<p dir=\"ltr\">3</p>\n</td>\n</tr>\n<tr>\n<td rowspan=\"4\">\n<p dir=\"ltr\"><strong>Physical changes</strong></p>\n<p dir=\"ltr\">Skin tears, pressure sores, arthritis, contractures, previous injuries</p>\n</td>\n<td>\n<p dir=\"ltr\">Absent</p>\n</td>\n<td>\n<p dir=\"ltr\">0</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Mild</p>\n</td>\n<td>\n<p dir=\"ltr\">1</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Moderate</p>\n</td>\n<td>\n<p dir=\"ltr\">2</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">Severe</p>\n</td>\n<td>\n<p dir=\"ltr\">3</p>\n</td>\n</tr>\n</tbody>\n</table>\n</div>\n<p><span id=\"docs-internal-guid-123cf8b3-6e87-14f4-ef08-19060d670fbb\"></span><span id=\"docs-internal-guid-123cf8b3-6e87-14f4-ef08-19060d670fbb\"><br></span></p>",
        "facts": "<p><b>Score interpretation:</b></p>\n<ul>\n<li>Scores &le;2 indicate no pain.</li>\n<li>Scores 3-7 indicate mild pain.</li>\n<li>Scores 8-13 indicate moderate pain.</li>\n<li>Scores &ge;14 indicate severe pain.</li>\n</ul>\n<p><strong>Note:</strong> all scores can be classified by type of pain: acute, chronic and acute on chronic.</p>",
        "estimation": [],
        "primary_complains": [
            "AMS"
        ],
        "disease_treated": [
            "Dementia"
        ],
        "logic": "var calc_output = [];\nvar v = parseFloat(vocal) + parseFloat(face) + parseFloat(body) + parseFloat(physio) + parseFloat(physical);\nvar text, typetext;\nvar type = parseFloat(type);\n\n\nif (v <= 2) {text = 'No';}\nif (v >= 3 && v <= 7) {text = 'Mild';}\nif (v >= 8 && v <= 13) {text = 'Moderate';}\nif (v >= 14) {text = 'Severe';}\n\nif (v >= 3) {\n    if (type == 1) {text += ' chronic';}\n\n    if (type == 2) {text += ' acute';}\n\n    if (type == 3) {text += ' acute on chronic';}\n} else {\n    if (type == 1) {text += ' ';}\n\n    if (type == 2) {text += ' ';}\n\n    if (type == 3) {text += ' ';}\n}\n\ncalc_output.push({ name: 'mini', value: v, value_text: 'points', message: text + ' pain' });\ncalc_output.push({ name: '3627_Abbey Pain Scale_result', value: v, value_text: 'points', message: text + ' pain' });",
