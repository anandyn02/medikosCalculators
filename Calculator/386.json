        "facts": "<div class=\"table-responsive\">\n<table class=\"table table-bordered table-hover\">\n<tbody>\n<tr>\n<th>Criteria</th>\n<th>Value</th>\n</tr>\n<tr>\n<td style=\"text-align: center;\" colspan=\"2\"><strong>Dense Cerebral Artery or Early Infarct Signs on Computerized Tomography</strong></td>\n</tr>\n<tr>\n<td>No</td>\n<td>0</td>\n</tr>\n<tr>\n<td>One of these</td>\n<td>+1</td>\n</tr>\n<tr>\n<td>Both</td>\n<td>+2</td>\n</tr>\n<tr>\n<td style=\"text-align: center;\" colspan=\"2\"><strong><abbr title=\"Modified Rankin Scale\">mRS</abbr><calculator id=\"1890\"></calculator> &gt;1, Prestroke</strong></td>\n</tr>\n<tr>\n<td>No</td>\n<td>0</td>\n</tr>\n<tr>\n<td>Yes</td>\n<td>+1</td>\n</tr>\n<tr>\n<td style=\"text-align: center;\" colspan=\"2\"><strong>Age</strong></td>\n</tr>\n<tr>\n<td>&lt;65</td>\n<td>0</td>\n</tr>\n<tr>\n<td>65-79</td>\n<td>+1</td>\n</tr>\n<tr>\n<td>&ge;80</td>\n<td>+2</td>\n</tr>\n<tr>\n<td style=\"text-align: center;\" colspan=\"2\"><strong>Glucose Level at Baseline</strong></td>\n</tr>\n<tr>\n<td>&lt;8 mmol/L (144 mg/dL)</td>\n<td>0</td>\n</tr>\n<tr>\n<td>&gt;8 mmol/L (144 mg/dL)</td>\n<td>+1</td>\n</tr>\n<tr>\n<td colspan=\"2\">Onset to Treatment Time</td>\n</tr>\n<tr>\n<td>&le; 90 minutes</td>\n<td>0</td>\n</tr>\n<tr>\n<td>&gt;90 minutes</td>\n<td>+1</td>\n</tr>\n<tr>\n<td style=\"text-align: center;\" colspan=\"2\"><strong>Baseline <abbr title=\"NIH Stroke Scale\">NIHSS</abbr><calculator id=\"715\"></calculator></strong></td>\n</tr>\n<tr>\n<td>0-4</td>\n<td>0</td>\n</tr>\n<tr>\n<td>5-9</td>\n<td>+1</td>\n</tr>\n<tr>\n<td>10-15</td>\n<td>+2</td>\n</tr>\n<tr>\n<td>&gt;15</td>\n<td>3</td>\n</tr>\n</tbody>\n</table>\n</div>\n<p><strong>Score interpretation:</strong></p>\n<div class=\"table-responsive\">\n<table class=\"table table-bordered table-hover\">\n<tbody>\n<tr>\n<th>DRAGON Score</th>\n<th>Outcome</th>\n<th>mRS Score</th>\n<th>Percentage of Cohort</th>\n</tr>\n<tr>\n<td>0 - 1</td>\n<td>Good</td>\n<td>0 - 2</td>\n<td>96%</td>\n</tr>\n<tr>\n<td>2</td>\n<td>Good</td>\n<td>0 - 2</td>\n<td>88%</td>\n</tr>\n<tr>\n<td>3</td>\n<td>Good</td>\n<td>0 - 2</td>\n<td>78%</td>\n</tr>\n<tr>\n<td>8 - 10</td>\n<td>Good</td>\n<td>0 - 2</td>\n<td>0%</td>\n</tr>\n<tr>\n<td>0 - 1</td>\n<td>Miserable</td>\n<td>5 - 6</td>\n<td>0%</td>\n</tr>\n<tr>\n<td>2</td>\n<td>Miserable</td>\n<td>5 - 6</td>\n<td>2%</td>\n</tr>\n<tr>\n<td>3</td>\n<td>Miserable</td>\n<td>5 - 6</td>\n<td>5%</td>\n</tr>\n<tr>\n<td>8</td>\n<td>Miserable</td>\n<td>5 - 6</td>\n<td>70%</td>\n</tr>\n<tr>\n<td>9 - 10</td>\n<td>Miserable</td>\n<td>5 - 6</td>\n<td>100%</td>\n</tr>\n</tbody>\n</table>\n</div>",
