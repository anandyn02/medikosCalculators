        "logic": "var calc_output=[]; var msg,recs,mini_msg; var u=parseInt(hepatic_renal_disease)+parseInt(ethanol_alcohol_abuse)+parseInt(malignancy)+parseInt(age_75)+parseInt(reduced_platelet)+parseInt(rebleeding)+parseInt(hypertension)+parseInt(anemia)+parseInt(genetic)+parseInt(fall_risk)+parseInt(stroke_history);if(u<5){switch(u){case 0:msg='1.9% risk of bleeding per 100 patient-years of warfarin.';recs='Consider initiation of warfarin therapy if clinically indicated as risk of thrombotic events likely outweighs the risk of bleeding.';mini_msg='1.9% risk of bleeding.'; break; case 1:msg='2.5% risk of bleeding per 100 patient-years of warfarin.';recs='Consider initiation of warfarin therapy if clinically indicated as risk of thrombotic events likely outweighs the risk of bleeding.';mini_msg='2.5% risk of bleeding.'; break; case 2:msg='5.3% risk of bleeding per 100 patient-years of warfarin.';recs='Consider alternatives to anticoagulation unless strong indications for warfarin therapies exist.';mini_msg='5.3% risk of bleeding.'; break; case 3:msg='8.4% risk of bleeding per 100 patient-years of warfarin.';recs='Consider alternatives to anticoagulation unless strong indications for warfarin therapies exist.';mini_msg='8.4% risk of bleeding.'; break; case 4:msg='10.4% risk of bleeding per 100 patient-years of warfarin.';recs='Alternative options should often be considered in patients with high-risk of major bleeding events in need of anticoagulation.';mini_msg='10.4% risk of bleeding.'; break}} else{msg='12.3% risk of bleeding per 100 patient-years of warfarin.';recs='Alternative options should often be considered in patients with high-risk of major bleeding events in need of anticoagulation.';mini_msg='12.3% risk of bleeding.';} \n\ncalc_output.push({\n    name:'mini',\n    value:u,\n    value_text:'points',\n    message:mini_msg\n}); \ncalc_output.push({\n    name:'1785_HEMORR2HAGES Score_result',\n    value:u,\n    value_text:'points',\n    message:msg+'<br/><br/>'+recs\n});",
