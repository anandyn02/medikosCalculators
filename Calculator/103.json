        "logic": "var cardio = cardio || 0;\nvar neuro = neuro || 0;\nvar resp = resp || 0;\nvar renal = renal || 0;\nvar hep = hep || 0;\nvar hem = hem || 0;\nvar wbc18 = wbc18 || 0;\nvar mass18 = mass18 || 0;\nvar duration = duration || 0;\nvar local = local || 0;\n\nvar calc_output = [];\n\nvar parta = parseFloat(sign) + parseFloat(mass);\nvar partb = parseFloat(fever) + parseFloat(crp) + parseFloat(wbc);\nvar partc = parseFloat(image);\nvar grade3 = cardio + neuro + resp + renal + hep + hem;\nvar grade2 = wbc18 + mass18 + duration + local;\n\nvar diag, severity, risk, grade, msg;\n\nif ((parta > 0 && partb > 0 && partc == 0) || (parta > 0 && partb == 0 && partc > 0)) {\n  diag = 'Suspected';\n  if (grade3 > 0) {\n    severity = 'Severe';\n    grade = 'III';\n    risk = '5.4';\n  } else if (grade2 > 0) {\n    severity = 'Moderate';\n    risk = '0.8';\n    grade = 'II';\n  } else { \n    severity = 'Mild';\n    risk = '1.1';\n    grade = 'I';\n  }\n  msg = 'Diagnosis of acute cholecystitis';\n} else if (parta > 0 && partb > 0 && partc > 0) {\n  diag = 'Definite';\n  if (grade3 > 0) {\n    severity = 'Severe';\n    grade = 'III';\n    risk = '5.4';\n  } else if (grade2 > 0) {\n    severity = 'Moderate';\n    risk = '0.8';\n    grade = 'II';\n  } else { \n    severity = 'Mild';\n    risk = '1.1';\n    grade = 'I';\n  }\n  msg = 'Diagnosis of acute cholecystitis';\n} else {\n  diag = '';\n  msg = 'Entry criteria not met for acute cholecystitis diagnosis';\n}\n\n//results\nif(parta > 0 && (partb > 0 || partc > 0)){\ncalc_output.push({\n    name: 'mini',\n    value: diag,\n    value_text: '',\n    message: 'Grade ' + grade\n});\n} else {\ncalc_output.push({\n    name: 'mini',\n    value: '',\n    value_text: '',\n    message: msg\n});}\ncalc_output.push({\n    name: 'diag',\n    value: diag,\n    value_text: '',\n    message: msg\n});\nif(parta > 0 && (partb > 0 || partc > 0)){\ncalc_output.push({\n    name: 'grade',\n    value: 'Grade ' + grade,\n    value_text: '',\n    message: severity + ' acute cholecystitis<br/><br/>' + risk + '% 30-day mortality' \n});\n}\n",
