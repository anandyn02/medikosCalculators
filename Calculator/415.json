            "Chemotherapy",
            "Renal Cell Carcinoma"
        ],
        "logic": "var calc_output = []; \nvar risk = ''; \nvar surv = ''; \nvar u = parseFloat(neph) + parseFloat(hb) + parseFloat(ca) + parseFloat(ldh) + parseFloat(karnofsky); \nif (u == 0) {risk = 'Favorable Risk Group'; surv = 'Median Survival 20 Months'; } \nelse if (u >=1 && u<= 2) {risk = 'Intermediate Risk Group'; surv = 'Median Survival 10 Months'; } \nelse if (u >= 3) {risk = 'High Risk Group'; surv = 'Median Survival 4 Months'; } \n\ncalc_output.push({\n    name: 'mini', \n    value: u.toFixed(0), \n    value_text: 'points', \n    message: risk \n}); \ncalc_output.push({\n    name: '2153_MSKCC/Motzer Criteria_result', \n    value: u.toFixed(0), \n    value_text: 'points', \n    message: risk + '<br/><br/>' + surv \n});",
