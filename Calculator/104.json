        "evidence": "<p><span id=\"docs-internal-guid-6e327eb7-7fff-bfa3-d440-9ed03c4d6834\">ABIC Score = (<strong>A</strong>ge, years &times; 0.1) + (Serum <strong>B</strong>ilirubin, mg/dL &times; 0.08) + (<strong>I</strong>NR &times; 0.8) +&nbsp;(Serum <strong>C</strong>reatinine, mg/dL &times; 0.3) </span></p>",
        "facts": "<p dir=\"ltr\">Interpretation:</p>\n<div dir=\"ltr\">\n<table><colgroup><col width=\"*\" /><col width=\"*\" /><col width=\"*\" /><col width=\"*\" /></colgroup>\n<tbody>\n<tr>\n<td>\n<p dir=\"ltr\"><strong>ABIC Score</strong></p>\n</td>\n<td>\n<p dir=\"ltr\"><strong>Risk group</strong></p>\n</td>\n<td>\n<p dir=\"ltr\"><strong>Survival at&nbsp;90 days</strong></p>\n</td>\n<td>\n<p dir=\"ltr\"><strong>Survival&nbsp;at&nbsp;</strong><strong>1 year</strong></p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">&lt;6.71</p>\n</td>\n<td>\n<p dir=\"ltr\">Low</p>\n</td>\n<td>\n<p dir=\"ltr\">100%</p>\n</td>\n<td>\n<p dir=\"ltr\">97.1%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">6.71 to &lt;9.00</p>\n</td>\n<td>\n<p dir=\"ltr\">Intermediate</p>\n</td>\n<td>\n<p dir=\"ltr\">70%</p>\n</td>\n<td>\n<p dir=\"ltr\">64.3%</p>\n</td>\n</tr>\n<tr>\n<td>\n<p dir=\"ltr\">&ge;9.00</p>\n</td>\n<td>\n<p dir=\"ltr\">High</p>\n</td>\n<td>\n<p dir=\"ltr\">25%</p>\n</td>\n<td>\n<p dir=\"ltr\">33.3%</p>\n</td>\n</tr>\n</tbody>\n</table>\n</div>\n<p><span id=\"docs-internal-guid-b2c41cf6-7fff-e27d-5755-fa62261ec5f9\"></span><span id=\"docs-internal-guid-b2c41cf6-7fff-e27d-5755-fa62261ec5f9\"><br /></span></p>",
