        "logic": "var calc_output=[]; \nvar u=parseFloat(sex)+parseFloat(hemoglobin)+parseFloat(base_excess)+parseFloat(systolic_bp)+parseFloat(heart_rate)+parseFloat(fast)+parseFloat(pelvic_fracture)+parseFloat(femur_fracture);\n\nvar msg='';\n\nif(u<9){\n    msg='< 5% predicted need for massive transfusion.'\n} else if(u==9){\n    msg='6% predicted need for massive transfusion.'\n} else if(u==10){\n    msg='8% predicted need for massive transfusion.'\n} else if(u==11){\n    msg='11% predicted need for massive transfusion.'\n} else if(u==12){\n    msg='14% predicted need for massive transfusion.'\n} else if(u==13){\n    msg='18% predicted need for massive transfusion.'\n} else if(u==14){\n    msg='23% predicted need for massive transfusion.'\n} else if(u==15){\n    msg='29% predicted need for massive transfusion.'\n} else if(u==16){\n    msg='35% predicted need for massive transfusion.'\n} else if(u==17){\n    msg='43% predicted need for massive transfusion.'\n} else if(u==18){\n    msg='50% predicted need for massive transfusion.'\n} else if(u==19){\n    msg='57% predicted need for massive transfusion.'\n} else if(u==20){\n    msg='65% predicted need for massive transfusion.'\n} else if(u==21){\n    msg='71% predicted need for massive transfusion.'\n} else if(u==22){\n    msg='77% predicted need for massive transfusion.'\n} else if(u==23){\n    msg='82% predicted need for massive transfusion.'\n} else if(u>23){\n    msg='> 85% predicted need for massive transfusion.'\n} \n\ncalc_output.push({\n    name:'mini',\n    value:u.toFixed(0),\n    value_text:'points',\n    message:msg\n}); \ncalc_output.push({\n    name:'1236_TASH Score_result',\n    value:u.toFixed(0),\n    value_text:'points',\n    message:msg\n});",
